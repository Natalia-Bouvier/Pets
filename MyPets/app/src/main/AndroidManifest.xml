<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bdl.mypets">

   <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Petagram"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.bdl.mypets.Acerca_de"
            android:parentActivityName="com.bdl.mypets.MainActivity"></activity>
        <activity android:name="com.bdl.mypets.Contacto"
            android:parentActivityName="com.bdl.mypets.MainActivity"/>
        <activity
            android:name="com.bdl.mypets.Favorito"
            android:parentActivityName="com.bdl.mypets.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bdl.mypets.MainActivity" />
        </activity>
        <activity android:name="com.bdl.mypets.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>